# 서버 설정
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=game_db
DB_DRIVER=postgres
DB_SSLMODE=disable

# JWT 설정
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24

# CORS 설정 (쉼표로 구분)
CORS_ALLOWED_ORIGINS=*

# Mock DB 사용 여부 (true: Mock 사용, false: 실제 DB 사용)
USE_MOCK_DB=true
